{
  "functions": {
    "api/provinces/[province].js": {
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/api/provinces/(.*)",
      "headers": [
        { 
          "key": "Access-Control-Allow-Origin", 
          "value": "https://tra-cuu-tinh-thanh.vercel.app" 
        },
        { 
          "key": "Access-Control-Allow-Methods", 
          "value": "GET, OPTIONS" 
        },
        { 
          "key": "Access-Control-Allow-Headers", 
          "value": "Content-Type, Authorization, Referer" 
        },
        { 
          "key": "Content-Type", 
          "value": "application/json" 
        },
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        }
      ]
    }
  ]
}